<body id="bodyHome">
    <header id="headerHome">
        <div id="hHome1">BIENVENIDOS <br>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;A <br> 
            &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;PET<b id="bigH">H</b>ome
        </div>
    </header>
    <banner></banner>
    <main id="mainHome">
        <div></div>
        <div id="mCenter">
            <div id="mPhrase">Se parte de esta gran labor</div>
            <div id="mAction">
                <label for="actions">Quiero:</label>
                <% const change = `checkAction(${exists})`; %>
                <select name="actions" id="actions" onchange=<%=change%>>
                  <option></option>
                  <option value="signup">Registrarme</option>
                  <option value="login">Ingresar</option>
                  <option value="adopt">Adoptar</option>
                </select>
            </div>
        </div>
        <div></div>
    </main>
    <footer id="footerHome">
        <div id="fHome">Created by <i>Edgar</i> Â©</div>
    </footer>
<script>
function checkAction(msg){
    const selectValue = document.querySelector('#actions').value;
    switch (selectValue.toUpperCase()){
        case "SIGNUP":
            window.open("/auth/signup","_self");
            break;
        case "LOGIN":
            displayLogin(msg);
            break;
        case "ADOPT":
            window.open("/adoptions","_self");
            break;
    };
};
function displayLogin(msg){
    const form = document.createElement('div');
    const message = (msg!=""&&msg!=undefined)?"<tr><td colspan='2'>"+msg+"</td></tr>":"";
    console.log(message);
    form.setAttribute('class','actions');
    form.innerHTML="<form action='/auth/login' method='POST'><center><table><tr><td>Username:</td><td><input type='text' name='username' size='40'></td></tr><tr><td>Password:</td><td><input type='password' name='password' size='40'></td></tr>"+message+"<tr><td colspan='2'><center><input type='submit' value='Ingresar'/></center></td></tr></table></center></form>"; 
    document.querySelector('#mAction').appendChild(form);
};
</script>
</body>
</html>